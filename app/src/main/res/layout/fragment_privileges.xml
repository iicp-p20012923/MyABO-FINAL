                            android:textSize="18dp"
                            android:paddingBottom="5dp"/>

                    </TableRow>

                    <View
                        android:layout_height="2dp"
                        android:background="@color/black" />

                    <!-- Table Data8 -->
                    <TableRow
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_weight="20"
                            android:gravity="center_horizontal"
                            android:text="41 - 50 Kali"
                            android:textSize="18dp" />

                        <TextView
                            android:ems="10"
                            android:text="Percuma rawatan pesakit luar dan rawatan perubatan wad kelas dua untuk *6 tahun.
    "
                            android:textSize="18dp"
                            android:paddingBottom="5dp"/>

                    </TableRow>

                    <View
                        android:layout_height="2dp"
                        android:background="@color/black" />

                    <!-- Table Data9 -->
                    <TableRow
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_weight="20"
                            android:gravity="center_horizontal"
                            android:text="Lebih 50 Kali"
                            android:textSize="18dp" />

                        <TextView
                            android:ems="10"
                            android:text="Percuma rawatan pesakit luar dan rawatan perubatan wad kelas dua untuk *10 tahun."
                            android:textSize="18dp"
                            android:paddingBottom="20dp"/>

                    </TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rujukan: (30) dlm. KKM-203/42 bertarikh 15 Julai 1996"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:paddingBottom="20dp"/>
                </TableLayout>











            </LinearLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>